{% extends 'user/baseUser.html.twig' %}

{% block body %}
    <div class="list-livingThing bg-lightGrey">
        <div class="list-livingThing-content">
            <div class="list-livingThing-header">
                <div class="list-livingThing-title">Mineral</div>
            </div>

            <div class="list-livingThing-search">
                <form class="form" method="get" action="{{ path('userMineral') }}">
                    <div class="formSearch">
                        <input class="formSearch-input" type="search" name="search" placeholder="Search a mineral . . .">
                        <button class="formSearch-button">Search</button>
                    </div>
                </form>
            </div>

            <div class="list-livingThing-options row">
                <div class="col-12 text-center">
                    <div class="filter-by--action">
                        <label>Filter By</label>
                        <form id="form--filter-by-mineral" method="POST">
                            <select id="filter-by-mineral" name="filter-by-mineral">
                                {% for key, value in filterChoices %}
                                    <option value="{{ key }}" {% if key == filter_by %} selected="seleted" {% endif %}>{{ value }}</option>
                                {% endfor %}
                            </select>
                        </form>
                    </div>
                </div>
            </div>

            <div class="list-livingThing-wrapper">
                {% if minerals != [] %}
                    {% for mineral in minerals %}
                        <div class="list-livingThing-box h-150px">
                            <div class="box-livingThing-img">
                                <img class="img-fluid" src="{{ asset(file_exist(mineral.imgPath)) }}" alt="{{ mineral.name }}">
                            </div>
                            <div class="box-livingThing-text">
                                <h4 class="title">{{ mineral.name }}</h4>

                                <div class="box-livingThing-action">
                                    {% if mineral.articleMineral != null %}
                                        {% if mineral.articleMineral.article != null %}
                                            {% if mineral.articleMineral.article.approved == true %}
                                                <span class="c-red">Have an article</span>
                                                <a class="btn btn-custom-midnight" href="{{ path('articleMineralByID', {'id': mineral.articleMineral.article.id}) }}">See Article</a>
                                            {% else %}
                                                <span class="c-orange">Pending approval</span>
                                            {% endif %}
                                        {% endif %}
                                    {% else %}
                                        <span class="c-green">No article found</span>
                                        <a class="btn btn-custom-midnight" href="{{ path('userMineralCreateArticle', {'id': mineral.id}) }}">Create article</a>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    {% endfor %}

                    {# Pagination #}
                    {% if offset >= 1 and offset <= total_page %}
                        <div class="pagination">
                            <div class="pagination-links">
                                {% if offset > 1 %}
                                    <a href="{{ path('userMineral', {'search': search}) }}"><i class="fas fa-angle-double-left"></i></a>
                                {% endif %}
                            
                                {% if offset - 1 >= 1 %}
                                    <a class="" href="{{ path('userMineral', {'search': search, 'offset': (offset - 1)}) }}">{{ offset - 1 }}</a>
                                {% endif %}

                                <a class="active" href="{{ path('userMineral', {'search': search, 'offset': offset}) }}"><span>{{ offset }}</span></a>
                                
                                {% if offset + 1 <= total_page %}
                                    <a class="" href="{{ path('userMineral', {'search': search, 'offset': offset + 1}) }}">{{ offset + 1 }}</a>
                                {% endif %}
                                
                                {% if offset < total_page %}
                                    <a href="{{ path('userMineral', {'search': search, 'offset': total_page}) }}"><i class="fas fa-angle-double-right"></i></a>
                                {% endif %}
                            </div>
                        </div>
                    {% endif %}
                {% else %}
                    <div class="alert alert-info">
                        <span>No minerals has been found.</span>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}