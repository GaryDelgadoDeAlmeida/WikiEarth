<footer class="footer">
    <div class="copyright bg-night">
        <div class="left">
            <span>Copyright &copy; {{ "now"|date("Y") }} &minus; <a href="{{ path('home') }}"><span class="c-white">Wiki<em class="c-cyanBlue">Earth</em></span></a></span>
        </div>
        <div class="right">
            {# <span>Realised by <a class="c-cyanBlue txt-bold" href="http://gary-delgado-de-almeida.000webhostapp.com" target="__blank">Garry Almeida</a></span> #}
