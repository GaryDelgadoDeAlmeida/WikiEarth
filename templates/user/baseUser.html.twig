{% extends 'base.html.twig' %}

{# CSS #}
{% block stylesheets %}
    <link href="{{ asset('assets/css/user/main.css') }}" rel="stylesheet">
{% endblock %}

{# Header #}
{% block header %}
<nav class="navbar navbar-dark bg-night">
    <a class="navbar-brand" href="{{ path('home') }}">
        <img class="d-inline-block align-top" src="{{ asset('content/img/logo/world.png') }}" width="30" height="30" alt="logo_wikiearth">
        <span>Wiki<em class="c-cyanBlue">Earth</em></span>
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
            <li class="nav-item"><a class="nav-link" href="{{ path('userHome') }}">Home</span></a></li>
            <li class="nav-item"><a class="nav-link" href="{{ path('userProfile') }}">Profile</span></a></li>
            <li class="nav-item"><a class="nav-link" href="{{ path('userLivingThing') }}">Living Thing</span></a></li>
            <li class="nav-item"><a class="nav-link" href="{{ path('userArticle') }}">Article</span></a></li>
            <li class="nav-item"><a class="nav-link" href="{{ path('userNotifs') }}">Notifications</span></a></li>
            <li class="nav-item"><a class="nav-link" href="{{ path('logout') }}">Logout</span></a></li>
        </div>
    </div>
</nav>
{% endblock %}


{# Footer #}
