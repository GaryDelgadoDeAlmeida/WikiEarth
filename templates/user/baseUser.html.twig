{% extends 'base.html.twig' %}

{# CSS #}
{% block stylesheets %}
    <link href="{{ asset('assets/css/user/main.css') }}" rel="stylesheet">
{% endblock %}

{# Header #}
{% block header %}
<header class="header bg-night">
    <h2 class="logo">
        <a href="{{ path('home') }}">
            <img src="{{ asset('content/img/logo/world.png') }}" width="45" height="45" alt="logo_wikiearth">
            <span>Wiki<em class="c-cyanBlue">Earth</em></span>
        </a>
    </h2>

    <input type="checkbox" name="chk" id="chk">
    <label for="chk" class="show-menu-btn">
        <i class="fas fa-bars"></i>
    </label>
    <nav class="menu">
        <label for="chk" class="hide-menu-btn">
            <i class="fas fa-times"></i>
        </label>
        <div>
            <li class="menu-item"><a href="{{ path('userHome') }}"><span>Home</span></a></li>
            <li class="menu-item"><a href="{{ path('userProfile') }}"><span>Profile</span></a></li>
            <li class="menu-item"><a href="{{ path('userLivingThing') }}"><span>Living Thing</span></a></li>
            <li class="menu-item"><a href="{{ path('userElement') }}"><span>Element</span></a></li>
            <li class="menu-item"><a href="{{ path('userMineral') }}"><span>Mineral</span></a></li>
            {# <li class="menu-item"><a href="{{ path('userArticle') }}"><span>Article</span></a></li> #}
            <li class="menu-item"><a href="{{ path('userNotifs') }}"><span>Notifications</span></a></li>
            {# <li class="menu-item"><a href="{{ path('userChat') }}"><span>Chat</span></a></li> #}
            <li class="menu-item"><a class="btn-logout" href="{{ path('logout') }}"><span>Logout</span></a></li>
        </div>
    </nav>
</header>
{% endblock %}


{# Footer #}
{% block footer %}
<footer class="footer">
    <div class="footer-copyright bg-night">
        <div class="copyright">
            <span>Copyright &copy; 2020-{{ "now"|date("Y") }} &minus; <a href="{{ path('home') }}"><span class="c-white">Wiki<em class="c-cyanBlue">Earth</em></span></a></span>
        </div>
        <div class="creator">
            {# <span>Realised by <a class="c-cyanBlue txt-bold" href="http://gary-delgado-de-almeida.000webhostapp.com" target="__blank">Garry Almeida</a></span> #}
            <span>Realised by <a class="c-cyanBlue txt-bold" href="https://fr.linkedin.com/in/garry-almeida-7538b3175" target="__blank">Garry Almeida</a></span>
        </div>
    </div>
</footer>
{% endblock %}


{# JS #}
{% block javascripts %}
    <script src="{{ asset('assets/js/user/main.js') }}" type="text/javascript"></script>
{% endblock %}