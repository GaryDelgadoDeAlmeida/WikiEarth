{% extends 'base.html.twig' %}

{# CSS #}
{% block stylesheets %}
    <link href="{{ asset('assets/css/user/main.css') }}" rel="stylesheet">
{% endblock %}

{# Header #}
{% block header %}
<nav class="navbar navbar-dark bg-dark">
    <a class="navbar-brand" href="{{ path('home') }}">
        <img style="border-radius: 25px;" src="https://p7.hiclipart.com/preview/334/416/887/earth-global-warming-climate-change-environment-earth-png.jpg" width="30" height="30" class="d-inline-block align-top" alt="logo_wikiearth">
        <span>Wiki<em class="c-cyanBlue">Earth</em></span>
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
            <li class="nav-item"><a class="nav-link" href="{{ path('userHome') }}">Home</span></a></li>
            <li class="nav-item"><a class="nav-link" href="{{ path('userArticle') }}">Article</span></a></li>
            <li class="nav-item"><a class="nav-link" href="{{ path('logout') }}">Logout</span></a></li>
        </div>
    </div>
</nav>
{% endblock %}


{# Footer #}
{% block footer %}
<footer>
    <div class="center">
        <span>Copyright &copy; {{ "now"|date("Y") }} &minus; WikiEarth</span>
        <span>Tous droits réservés</span>
    </div>
    <div class="right">
        <span>Realised by <a href="#">Garry Almeida</a></span>
    </div>
</footer>
{% endblock %}


{# JS #}
{% block javascripts %}
    <script src="{{ asset('assets/js/user/main.js') }}" type="text/javascript"></script>
{% endblock %}