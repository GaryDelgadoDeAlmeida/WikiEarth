                <li><a href="{{ path('login') }}">Login</a></li>
                <li><a href="{{ path('register') }}">Register</a></li>
            </ul>
        </nav>
        <nav>
            <h3>Living Things</h3>
            <hr>
            <ul>
                <li><a href="{{ path("articleLivingThing", {"name": "animals"}) }}">Animals</a></li>
                {# <li><a href="{{ path("articleLivingThing", {"name": "insects"}) }}">Insects</a></li> #}
                <li><a href="{{ path("articleLivingThing", {"name": "plants"}) }}">Plants</a></li>
                <li><a href="{{ path("articleLivingThing", {"name": "fungi"}) }}">Fungi</a></li>
                <li><a href="{{ path("articleLivingThing", {"name": "bacteria"}) }}">Bacteria</a></li>
                <li><a href="{{ path("articleLivingThing", {"name": "viruses"}) }}">Virus</a></li>
            </ul>
        </nav>
        <nav>
