{% extends 'base.html.twig' %}

{# CSS #}
{% block stylesheets %}
    <link href="{{ asset('lib/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/css/anonymous/main.css') }}" rel="stylesheet">
{% endblock %}


{# Header #}
{% block header %}
<header class="header bg-night">
    <h2 class="logo">
        <a href="{{ path('home') }}">
            <img src="{{ asset('content/img/logo/world.png') }}" width="45" height="45" alt="logo_wikiearth">
            <span>Wiki<em class="c-cyanBlue">Earth</em></span>
        </a>
    </h2>

    <input type="checkbox" name="chk" id="chk">
    <label for="chk" class="show-menu-btn">
        <i class="fas fa-bars"></i>
    </label>
    <nav class="menu">
        <div>
            <li><a  href="{{ path('home') }}"><span>Home</span></a></li>
            <li>
                <span>Living Things</span>
                <ul class="submenu">
                    <li><a href="{{ path("articleLivingThing", {"name": "animals"}) }}">Animals</a></li>    
                    <li><a href="{{ path("articleLivingThing", {"name": "plants"}) }}">Plants</a></li>
                    <li><a href="{{ path("articleLivingThing", {"name": "fungi"}) }}">Fungi</a></li>
                    <li><a href="{{ path("articleLivingThing", {"name": "bacteria"}) }}">Bacteria</a></li>
                    <li><a href="{{ path("articleLivingThing", {"name": "viruses"}) }}">Virus</a></li>
                </ul>
            </li>
            <li>
                <span>Natural Elements</span>
                <ul class="submenu">
                    <li><a href="">Elements</a></li>    
                    <li><a href="">Minerals</a></li>
                    <li><a href="">Rocks</a></li>
                    <li><a href="">Chimical Reaction</a></li>
                </ul>
            </li>
            <li><a href="{{ path('about') }}"><span>About</span></a></li>
            <li><a href="{{ path('about') }}"><span>News</span></a></li>
            {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
                <li><a href="{{ path('login') }}"><span>Login</span></a></li>
            {% endif %}
        </div>
    </nav>
</header>
{% endblock %}


