{% extends 'base.html.twig' %}

{# CSS #}
{% block stylesheets %}
    <link href="{{ asset('assets/css/anonymous/main.css') }}" rel="stylesheet">
{% endblock %}


{# Header #}
{% block header %}
<nav class="navbar navbar-dark bg-night">
    <a class="navbar-brand" href="{{ path('home') }}">
        <img class="d-inline-block align-top" src="{{ asset('content/img/logo/world.png') }}" width="30" height="30" alt="logo_wikiearth">
        <span>Wiki<em class="c-cyanBlue">Earth</em></span>
    </a>
    
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        {# <span class="navbar-toggler-icon"></span> #}
        <i class="fas fa-bars"></i>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
            <li class="nav-item"><a class="nav-link" href="{{ path('home') }}"><span>Home</span></a></li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Living Things</a>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="{{ path("articleLivingThing", {"name": "animals"}) }}">Animals</a>
                    <a class="dropdown-item" href="{{ path("articleLivingThing", {"name": "fungi"}) }}">Fungi</a>
                    <a class="dropdown-item" href="{{ path("articleLivingThing", {"name": "plants"}) }}">Plants</a>
                    {# <a class="dropdown-item" href="{{ path("articleLivingThing", {"name": "insects"}) }}">Insects</a> #}
                    <a class="dropdown-item" href="{{ path("articleLivingThing", {"name": "bacteria"}) }}">Bacteria</a>
                    <a class="dropdown-item" href="{{ path("articleLivingThing", {"name": "viruses"}) }}">Virus</a>
                </div>
            </li>
            <li class="nav-item"><a class="nav-link" href="{{ path('about') }}"><span>About</span></a></li>
            {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
                <li class="nav-item"><a class="nav-link" href="{{ path('login') }}"><span>Login</span></a></li>
            {% endif %}
        </div>
    </div>
</nav>
{% endblock %}


