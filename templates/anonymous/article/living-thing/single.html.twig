{% extends 'anonymous/baseAnonymous.html.twig' %}

{% block body %}
    <section class="articleLivingThing">
        {# <div class="container"> #}
            <div class="articleLivingThing-single">

                {# Left Content #}
                <div class="articleLivingThing-single-left">
                    <div class="wikiearth-header">
                        <div class="wikiearth-header-logo">
                            <img class="img-fluid" src="{{ asset('content/img/logo/world.png') }}" alt="WikiEarth">
                        </div>
                        <div class="wikiearth-header-content">
                            <span class="wikiearth-header-title">WikiEarth</span>
                            <p class="wikiearth-header-text">The encyclopedia on the Earth</p>
                        </div>
                    </div>
                    <div class="subLink">
                        <ul>
                            <li class="title">Contents</li>

                            {% if livingThing.geography != null %}
                                <li class="subLink-item"><a href="#geography">Geography</a></li>
                            {% endif %}

                            {% if livingThing.ecology != null %}
                                <li class="subLink-item"><a href="#ecology">Ecology</a></li>
                            {% endif %}

                            {% if livingThing.behaviour != null %}
                                <li class="subLink-item"><a href="#behaviour">Behaviour</a></li>
                            {% endif %}

                            {% if livingThing.wayOfLife != null %}
                                <li class="subLink-item"><a href="#wayOfLife">Way of life</a></li>
                            {% endif %}

                            {% if livingThing.description != null %}
                                <li class="subLink-item"><a href="#description">Description</a></li>
                            {% endif %}

                            {% if livingThing.otherData != null %}
                                <li class="subLink-item"><a href="#otherData">Other Data</a></li>
                            {% endif %}

                            {% if mediaGallery != [] %}
                                <li class="subLink-item"><a href="#photo">Photos</a></li>
                            {% endif %}

                            {% if references != [] %}
                                <li class="subLink-item"><a href="#references">References</a></li>
                            {% endif %}
                        </ul>
                    </div>
                </div>

                {# Center Content #}
                <div class="articleLivingThing-single-center">
                    <div class="post">
                        <h1 class="post-title">{{ livingThing.title }}</h1>

                        <div class="post-content">
                            {% if livingThing.geography != null %}
                                <div class="post-content-geography" id="geography">
                                    <h3 class="post-content-geography-title">Geography</h3>

                                    {# Geography #}
                                    <div class="post-content-geography-content">
                                        {% for oneGeography in livingThing.geography %}
                                            <div class="geography-content">
                                                <div class="title">
                                                    <span>{{ oneGeography.sub_title }}</span>
                                                </div>
                                                <div class="content">
                                                    <p>{{ oneGeography.sub_content }}</p>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            {% endif %}

                            {# Ecology #}
                            {% if livingThing.ecology != null %}
                                <div class="post-content-ecology" id="ecology">
                                    <h3 class="post-content-ecology-title">Ecology</h3>

                                    <div class="post-content-ecology-content">
                                        {% for oneEcology in livingThing.ecology %}
                                            <div class="ecology-content">
                                                <div class="title">
                                                    <span>{{ oneEcology.sub_title }}</span>
                                                </div>
                                                <div class="content">
                                                    <span>{{ oneEcology.sub_content }}</span>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            {% endif %}

                            {# Behaviour #}
                            {% if livingThing.behaviour != null %}
                                <div class="post-content-behaviour" id="behaviour">
                                    <h3 class="post-content-behaviour-title">Behaviour</h3>

                                    <div class="post-content-behaviour-content">
                                        {% for oneBehaviour in livingThing.behaviour %}
                                            <div class="behaviour-content">
                                                <div class="title">
                                                    <span>{{ oneBehaviour.sub_title }}</span>
                                                </div>
                                                <div class="content">
                                                    <p>{{ oneBehaviour.sub_content }}</p>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            {% endif %}

                            {# Way of Life #}
                            {% if livingThing.wayOfLife != null %}
                                <div class="post-content-wayOfLife" id="wayOfLife">
                                    <h3 class="post-content-wayOfLife-title">Way of Life</h3>

                                    <div class="post-content-wayOfLife-content">
                                        {% for oneWayOfLife in livingThing.wayOfLife %}
                                            <div class="wayOfLife-content">
                                                <div class="title">
                                                    <span>{{ oneWayOfLife.sub_title }}</span>
                                                </div>
                                                <div class="content">
                                                    <p>{{ oneWayOfLife.sub_content }}</p>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            {% endif %}

                            {# Description #}
                            {% if livingThing.description != null %}
                                <div class="post-content-description" id="description">
                                    <h3 class="post-content-description-title">Description</h3>

                                    <div class="post-content-description-content">
                                        {% for oneDescription in livingThing.description %}
                                            <div class="description-content">
                                                <div class="title">
                                                    <span>{{ oneDescription.sub_title }}</span>
                                                </div>
                                                <div class="content">
                                                    <p>{{ oneDescription.sub_content }}</p>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            {% endif %}

                            {# Other Information #}
                            {% if livingThing.otherData != null %}
                                <div class="post-content-otherData" id="otherData">
                                    <h3 class="post-content-otherData-title">Other Data</h3>

                                    <div class="post-content-otherData-content">
                                        {% for oneOtherData in livingThing.otherData %}
                                            <div class="otherData-content">
                                                <div class="title">
                                                    <span>{{ oneOtherData.sub_title }}</span>
                                                </div>
                                                <div class="content">
                                                    <p>{{ oneOtherData.sub_content }}</p>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            {% endif %}

                            {# Media Gallery Photo #}
                            {% if mediaGallery != [] %}
                                <div class="post-content-photo" id="photo">
                                    <h3 class="post-content-photo-title">Photos</h3>

                                    <div class="post-content-photo-content">
                                        {% for oneMedia in mediaGallery %}
                                            {% if file_exist(oneMedia.path, false) != "" %}
                                                <div class="photo-content">
                                                    <img src="{{ asset(oneMedia.path) }}" />
                                                </div>
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                </div>
                            {% endif %}

                            {# References / Sources #}
                            {% if references != [] %}
                                <div class="post-content-references" id="references">
                                    <div class="post-content-references-title">
                                        <h3>References</h3>
                                    </div>

                                    <div class="post-content-references-content">
                                        {% for oneReferences in references %}
                                            <li><a href="{{ oneReferences.link }}">{{ oneReferences.name }}</a></li>
                                        {% endfor %}
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>

                {# Right Content #}
                <div class="articleLivingThing-single-right">
                    <div class="articleLivingThing-livingThing">
                        <div class="livingThing-img">
                            <img class="img-fluid" src="{{ asset(file_exist(livingThing.idLivingThing.imgPath)) }}" alt="{{ livingThing.idLivingThing.name }}">
                        </div>

                        <div class="livingThing-content">
                            {% if livingThing.idLivingThing.domain != null %}
                                <li>Domain : {{ livingThing.idLivingThing.domain }}</li>
                            {% endif %}

                            {% if livingThing.idLivingThing.kingdom != null %}
                                <li>Kingdom : {{ livingThing.idLivingThing.kingdom }}</li>
                            {% endif %}

                            {% if livingThing.idLivingThing.subKingdom != null %}
                                <li>Sub Kingdom : {{ livingThing.idLivingThing.subKingdom }}</li>
                            {% endif %}

                            {% if livingThing.idLivingThing.branch != null %}
                                <li>Branch : {{ livingThing.idLivingThing.branch }}</li>
                            {% endif %}
                            
                            {% if livingThing.idLivingThing.subBranch != null %}
                                <li>Sub Branch : {{ livingThing.idLivingThing.subBranch }}</li>
                            {% endif %}

                            {% if livingThing.idLivingThing.infraBranch != null %}
                                <li>Infra Branch : {{ livingThing.idLivingThing.infraBranch }}</li>
                            {% endif %}
                                
                            {% if livingThing.idLivingThing.division != null %}
                                <li>Division : {{ livingThing.idLivingThing.division }}</li>
                            {% endif %}

                            {% if livingThing.idLivingThing.superClass != null %}
                                <li>Super Class : {{ livingThing.idLivingThing.superClass }}</li>
                            {% endif %}

                            {% if livingThing.idLivingThing.class != null %}
                                <li>Class : {{ livingThing.idLivingThing.class }}</li>
                            {% endif %}

                            {% if livingThing.idLivingThing.subClass != null %}
                                <li>Sub Class : {{ livingThing.idLivingThing.subClass }}</li>
                            {% endif %}

                            {% if livingThing.idLivingThing.infraClass != null %}
                                <li>Infra Class : {{ livingThing.idLivingThing.infraClass }}</li>
                            {% endif %}

                            {% if livingThing.idLivingThing.superOrder != null %}
                                <li>Super Order : {{ livingThing.idLivingThing.superOrder }}</li>
                            {% endif %}

                            {% if livingThing.idLivingThing.normalOrder != null %}
                                <li>Order : {{ livingThing.idLivingThing.normalOrder }}</li>
                            {% endif %}

                            {% if livingThing.idLivingThing.subOrder != null %}
                                <li>Sub Order : {{ livingThing.idLivingThing.subOrder }}</li>
                            {% endif %}
                            
                            {% if livingThing.idLivingThing.infraOrder != null %}
                                <li>Infra Order : {{ livingThing.idLivingThing.infraOrder }}</li>
                            {% endif %}

                            {% if livingThing.idLivingThing.microOrder != null %}
                                <li>Micro Order : {{ livingThing.idLivingThing.microOrder }}</li>
                            {% endif %}

                            {% if livingThing.idLivingThing.superFamily != null %}
                                <li>Super Family : {{ livingThing.idLivingThing.superFamily }}</li>
                            {% endif %}

                            {% if livingThing.idLivingThing.family != null %}
                                <li>Family : {{ livingThing.idLivingThing.family }}</li>
                            {% endif %}

                            {% if livingThing.idLivingThing.subFamily != null %}
                                <li>Sub Family : {{ livingThing.idLivingThing.subFamily }}</li>
                            {% endif %}

                            {% if livingThing.idLivingThing.genus != null %}
                                <li>Genus : {{ livingThing.idLivingThing.genus }}</li>
                            {% endif %}

                            {% if livingThing.idLivingThing.subGenus != null %}
                                <li>Sub Genus : {{ livingThing.idLivingThing.subGenus }}</li>
                            {% endif %}

                            {% if livingThing.idLivingThing.species != null %}
                                <li>Species : {{ livingThing.idLivingThing.species }}</li>
                            {% endif %}

                            {% if livingThing.idLivingThing.subSpecies != null %}
                                <li>Sub Species : {{ livingThing.idLivingThing.subSpecies }}</li>
                            {% endif %}

                            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                {% if is_granted('ROLE_USER') %}
                                    <a class="btn btn-success" href="{{ path('userEditArticle', {'id': livingThing.id}) }}"><i class="far fa-edit"></i></a>
                                {% else %}
                                    <a class="btn btn-success" href="{{ path('adminEditArticleByCategory', {'category': 'living-thing', 'id': livingThing.id}) }}"><i class="far fa-edit"></i></a>
                                {% endif %}
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        {# </div> #}
    </section>
{% endblock %}