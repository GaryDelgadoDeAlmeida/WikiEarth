{% extends 'anonymous/baseAnonymous.html.twig' %}

{% block body %}
    <section class="livingThing">
        <div class="container">
            {% if elements != [] %}

                {# Pagination #}
                {% if offset > 1 and offset <= nbrOffset %}
                    <div class="pagination">
                        <div class="pagination-links">
                            <a href="{{ path('articleElement', {'offset': 1}) }}"><i class="fas fa-angle-double-left"></i></a>
                        
                            {% if offset - 1 >= 1 %}
                                <a class="" href="{{ path('articleElement', {'offset': offset - 1}) }}">{{ offset - 1 }}</a>
                            {% endif %}

                            <a class="active" href="{{ path('articleElement', {'offset': offset}) }}"><span>{{ offset }}</span></a>
                            
                            {% if offset + 1 <= nbrOffset %}
                                <a class="" href="{{ path('articleElement', {'offset': offset + 1}) }}">{{ offset + 1 }}</a>
                            {% endif %}
                            
                            <a href="{{ path('articleElement', {'offset': nbrOffset}) }}"><i class="fas fa-angle-double-right"></i></a>
                        </div>
                    </div>
                {% endif %}
            {% else %}
                <div class="alert alert-danger">
                    <span>No elements has been found.</span>
                </div>
            {% endif %}
        </div>
    </section>
{% endblock %}
