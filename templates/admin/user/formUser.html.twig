{% extends 'admin/baseAdmin.html.twig' %}

{% block body %}
    <section class="user-profile">
        <a class="btn btn-primary" href="{{ path('adminUsersListing') }}"><i class="fas fa-arrow-left"></i> Back</a>
        <div>&nbsp;</div>

        {% if response != [] %}
            <div class="alert alert-{{ response.class }} txt-center">
                <span>{{ response.message }}</span>
            </div>
        {% endif %}

        {{ form_start(form, {'method': 'POST'}) }}
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-group col-md-12 col-lg-12 wow fadeInUp animated">
                        {{ form_row(form.firstname) }}
                    </div>
                    <div class="form-group col-md-12 col-lg-12 wow fadeInUp animated">
                        {{ form_row(form.lastname) }}
                    </div>
                    <div class="form-group col-md-12 col-lg-12 wow fadeInUp animated">
                        {{ form_row(form.email) }}
                    </div>
                    <div class="form-group col-md-12 col-lg-12 wow fadeInUp animated">
                        {{ form_row(form.login) }}
                    </div>
                    <div class="form-group col-md-12 col-lg-12 wow fadeInUp animated">
                        {{ form_row(form.password) }}
                    </div>
                    <div class="form-group col-md-12 col-lg-12 wow fadeInUp animated">
                        {{ form_row(form.confirmPassword) }}
                    </div>
                    <div class="form-group col-md-12 col-lg-12 wow fadeInUp animated text-center" >
                        {{ form_row(form.submit) }}
                    </div>
                </div>
            </div>
        {{ form_end(form, {'method': 'POST'}) }}
    </section>
{% endblock %}