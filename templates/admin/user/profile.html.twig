{% extends 'admin/baseAdmin.html.twig' %}

{% block body %}
    <section class="user-profile">
        <div class="">
            {% if response != [] %}
                <div class="alert alert-{{ response.class }} txt-center">
                    <span>{{ response.message }}</span>
                </div>
                <div>&nbsp;</div>
            {% endif %}

            {{ form_start(form, {'method': 'POST', "attr": {"class": "row"}}) }}
                <div class="col-lg-6 m-middle">
                    <div class="form-group col-md-12 col-lg-12 wow fadeInUp animated text-center">
                        <label for="user_imgPath"><img class="img-fluid rounded" width="250" height="400" src="{{ asset(file_exist(userImg)) }}"></label>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="row">
                        <div class="form-group col-md-6 col-lg-6 wow fadeInUp animated">
                            {{ form_row(form.firstname) }}
                        </div>
                        <div class="form-group col-md-6 col-lg-6 wow fadeInUp animated">
                            {{ form_row(form.lastname) }}
                        </div>
                        <div class="form-group col-md-12 col-lg-12 wow fadeInUp animated">
                            {{ form_row(form.email) }}
                        </div>
                        <div class="form-group col-md-12 col-lg-12 wow fadeInUp animated">
                            {{ form_row(form.login, {"attr": {"readonly": "true"}}) }}
                        </div>
                        <div class="form-group col-md-6 col-lg-6 wow fadeInUp animated">
                            {{ form_row(form.password) }}
                        </div>
                        <div class="form-group col-md-6 col-lg-6 wow fadeInUp animated">
                            {{ form_row(form.confirmPassword) }}
                        </div>
                        <div class="form-group col-md-12 col-lg-12 wow fadeInUp animated" hidden>
                            {{ form_row(form.imgPath) }}
                        </div>
                        <div class="form-group col-12">
                            {{ form_label(form.preferences) }}
                            {{ form_widget(form.preferences, {"attr": {"class": "profile-preferences"}}) }}
                        </div>
                        <div class="form-group col-md-12 col-lg-12 wow fadeInUp animated text-center" >
                            {{ form_row(form.submit) }}
                        </div>
                    </div>
                </div>
            {{ form_end(form, {'method': 'POST'}) }}
        </div>
    </section>
{% endblock %}