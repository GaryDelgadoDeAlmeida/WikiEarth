{% extends 'admin/baseAdmin.html.twig' %}

{% block body %}
    <div class="container">
        <div>&nbsp;</div>

        <table class="table text-center">
            <thead>
                <tr>
                    <th>FullName</th>
                    <th>Email</th>
                    <th>Created At</th>
                    <th colspan="2">Action</th>
                </tr>
            </thead>

            <tbody>
                {% if users != null %}
                    {% for user in users %}
                        <tr>
                            <td>{{ user.firstname }} {{ user.lastname }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.createdAt|date("m/d/Y") }}</td>
                            <td><a href="{{ path('adminUserEdit', {'id': user.id}) }}"><i class="far fa-edit"></i></a></td>
                            <td><a href="{{ path('adminUserDelete', {'id': user.id}) }}"><i class="far fa-trash-alt"></i></a></td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="6">Aucun autre utilisateur n'a été trouvé.</td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
    </div>
{% endblock %}