{% extends 'admin/baseAdmin.html.twig' %}

{% block body %}
    <div class="container">
        <a href="{{ path("adminAddArticle") }}" class="btn btn-success">Add</a>
        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Type</th>
                    <th>User</th>
                    <th colspan="2">Action</th>
                </tr>
            </thead>
            
            <tbody class="text-center">
                {% if articles != [] %}
                    {% for article in articles %}
                        <tr>
                            <td>{{ article.title }}</td>
                            <td></td>
                            <td></td>
                            <td><a href=""><button>E</button></a></td>
                            <td><a href=""><button>D</button></a></td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="5">Aucun article n'a été trouvé</td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
    </div>
{% endblock %}