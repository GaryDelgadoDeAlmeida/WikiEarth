                                            <div class="form-group col-md-12 col-lg-12 wow fadeInUp animated">
                                                {{ form_row(ecology.sub_title) }}
                                            </div>
                                            <div class="form-group col-md-12 col-lg-12 wow fadeInUp animated">
                                                {{ form_row(ecology.sub_content) }}
                                            </div>
                                        </div>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="form-group col-md-12 col-lg-12 wow fadeInUp animated">
                    <h3>Behaviour</h3>
                    
                    <div class="row">
                        <div class="form-group col-md-12 col-lg-12 wow fadeInUp animated">
                            <ul class="behaviour-tags" data-prototype="{{ form_widget(formArticle.behaviour.vars.prototype)|e }}">
                                {% for behaviour in formArticle.behaviour %}
                                    <li class="form-group col-md-12 col-lg-12 wow fadeInUp animated">
                                        <div class="row">
                                            <div class="form-group col-md-12 col-lg-12 wow fadeInUp animated">
                                                {{ form_row(behaviour.sub_title) }}
                                            </div>
                                            <div class="form-group col-md-12 col-lg-12 wow fadeInUp animated">
                                                {{ form_row(behaviour.sub_content) }}
                                            </div>
                                        </div>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="form-group col-md-12 col-lg-12 wow fadeInUp animated">
                    <h3>Way Of Life</h3>
                    
                    <div class="row">
                        <div class="form-group col-md-12 col-lg-12 wow fadeInUp animated">
                            <ul class="wayOfLife-tags" data-prototype="{{ form_widget(formArticle.wayOfLife.vars.prototype)|e }}">
                                {% for wayOfLife in formArticle.wayOfLife %}
                                    <li class="form-group col-md-12 col-lg-12 wow fadeInUp animated">
                                        <div class="row">
                                            <div class="form-group col-md-12 col-lg-12 wow fadeInUp animated">
                                                {{ form_row(wayOfLife.sub_title) }}
