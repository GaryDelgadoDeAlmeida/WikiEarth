                                            <div class="form-group col-md-12 col-lg-12 wow fadeInUp animated">
                                                {{ form_row(wayOfLife.sub_content) }}
                                            </div>
                                        </div>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="form-group col-md-12 col-lg-12 wow fadeInUp animated">
                    <h3>Description</h3>
                    
                    <div class="row">
                        <div class="form-group col-md-12 col-lg-12 wow fadeInUp animated">
