{% extends 'admin/baseAdmin.html.twig' %}

{% block body %}
    <div class="container">
        {% if response != [] %}
            <div class="alert alert-{{ response.class }} txt-center">
                <span>{{ response.message }}</span>
            </div>
        {% endif %}

        {{ form_start(formArticle, {"method":"POST"}) }}
            <div class="row">
                <div class="form-group col-md-12 col-lg-12 wow fadeInUp animated">
                    <h3>Living Thing</h3>
                    
                    <div class="row">
                        <div class="form-group col-md-12 col-lg-12 wow fadeInUp animated">
                            {{ form_widget(formArticle.livingThing) }}
                        </div>
                    </div>
                </div>

                <div class="form-group col-md-12 col-lg-12 wow fadeInUp animated">
                    <h3>Geography</h3>
                    
                    <div class="row">
                        <div class="form-group col-md-12 col-lg-12 wow fadeInUp animated">
                            <ul class="geography-tags" data-prototype="{{ form_widget(formArticle.geography.vars.prototype)|e }}">
                                {% for geography in formArticle.geography %}
                                    <li class="form-group col-md-12 col-lg-12 wow fadeInUp animated">
                                        <div class="row">
                                            <div class="form-group col-md-12 col-lg-12 wow fadeInUp animated">
                                                {{ form_row(geography.sub_title) }}
                                            </div>
                                            <div class="form-group col-md-12 col-lg-12 wow fadeInUp animated">
                                                {{ form_row(geography.sub_content) }}
                                            </div>
                                        </div>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="form-group col-md-12 col-lg-12 wow fadeInUp animated">
                    <h3>Ecology</h3>
                    
                    <div class="row">
                        <div class="form-group col-md-12 col-lg-12 wow fadeInUp animated">
                            <ul class="ecology-tags" data-prototype="{{ form_widget(formArticle.ecology.vars.prototype)|e }}">
