{% extends 'admin/baseAdmin.html.twig' %}

{% block body %}
    <section class="wikiearth-article">
        <div class="container">
            <a class="btn btn-primary" href="{{ path('adminArticleByCategory', {'category': category}) }}"><i class="fa fa-arrow-left"></i> Retour</a>

            <div>&nbsp;</div>
            <div class="article-mineral">
                <h1>{{ article.title }}</h1>

                <div class="mineral-data-section txt-center">
                    <table class="table w-350px m-auto">
                        <tr>
                            <td colspan="2"><img class="img-fluid" src="{{ asset(file_exist(article.element.imgPath)) }}" alt="{{ article.element.name }}"></td>
                        </tr>
                        <tr>
                            <td>Scientific Name</td>
                            <td>{{ article.element.scientificName }}</td>
                        </tr>
                        <tr>
                            <td>Radioisotope</td>
                            <td>{{ article.element.radioisotope }}</td>
                        </tr>
                        <tr>
                            <td>Number</td>
                            <td>{{ article.element.atomicNumber }}</td>
                        </tr>
                        <tr>
                            <td>Symbole</td>
                            <td>{{ article.element.symbole }}</td>
                        </tr>
                        <tr>
                            <td>Group</td>
                            <td>{{ article.element.atomeGroup }}</td>
                        </tr>
                        <tr>
                            <td>Period</td>
                            <td>{{ article.element.atomePeriod }}</td>
                        </tr>
                        <tr>
                            <td>Block</td>
                            <td>{{ article.element.atomeBlock }}</td>
                        </tr>
                        <tr>
                            <td>Volumic Mass</td>
                            <td>{{ article.element.volumicMass|join(", ") }}</td>
                        </tr>
                        <tr>
                            <td>Num CAS</td>
                            <td>{{ article.element.numCAS }}</td>
                        </tr>
                        <tr>
                            <td>Num CE</td>
                            <td>{{ article.element.numCE }}</td>
                        </tr>
                        <tr>
                            <td>Atomic Mass</td>
                            <td>{{ article.element.atomicMass }}</td>
                        </tr>
                        <tr>
                            <td>Atomic Radius</td>
                            <td>{{ article.element.atomicRadius }}</td>
                        </tr>
                        <tr>
                            <td>Covalent Radius</td>
                            <td>{{ article.element.covalentRadius }}</td>
                        </tr>
                        <tr>
                            <td>Van Der Waals Radius</td>
                            <td>{{ article.element.vanDerWaalsRadius }}</td>
                        </tr>
                        <tr>
                            <td>Electronique Configuration</td>
                            <td>{{ article.element.electroniqueConfiguration }}</td>
                        </tr>
                        <tr>
                            <td>Oxidation State</td>
                            <td>{{ article.element.oxidationState }}</td>
                        </tr>
                        <tr>
                            <td>Electronegativity</td>
                            <td>{{ article.element.electronegativity }}</td>
                        </tr>
                        <tr>
                            <td>Fusion Point</td>
                            <td>{{ article.element.fusionPoint }}</td>
                        </tr>
                        <tr>
                            <td>Boiling Point</td>
                            <td>{{ article.element.boilingPoint }}</td>
                        </tr>
                        <tr>
                            <td>Radioactivity</td>
                            <td>{{ article.element.radioactivity ? "Oui" : "Non" }}</td>
                        </tr>
                    </table>
                </div>

                {% if article.generality != [] %}
                    <div class="generalities-section">
                        <h2>Generalities</h2>
                        {% for generality in article.generality %}
                            <div class="generality">
                                <h3>{{ generality.sub_title }}</h3>
                                <p>{{ generality.sub_content }}</p>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %} 

                {% if article.description != [] %}
                    <div class="description-section">
                        <h2>Etymologies</h2>
                        {% for description in article.description %}
                            <div class="description">
                                <h3>{{ description.sub_title }}</h3>
                                <p>{{ description.sub_content }}</p>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}

                {% if article.characteristics != [] %}
                    <div class="characteristics-section">
                        <h2>Etymologies</h2>
                        {% for characteristics in article.characteristics %}
                            <div class="characteristic">
                                <h3>{{ characteristics.sub_title }}</h3>
                                <p>{{ characteristics.sub_content }}</p>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}


                {% if article.property != [] %}
                <div class="properties-section">
                    <h2>Properties</h2>
                    {% for property in article.property %}
                        <div class="property">
                            <h3>{{ property.sub_title }}</h3>
                            <p>{{ property.sub_content }}</p>
                        </div>
                    {% endfor %}
                </div>
                {% endif %}

                {% if article.utilization != [] %}
                    <div class="geologies-section">
                        <h2>Geologies</h2>
                        {% for utilization in article.utilization %}
                            <div class="utilization">
                                <h3>{{ utilization.sub_title }}</h3>
                                <p>{{ utilization.sub_content }}</p>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>

            <a class="btn btn-success" href="{{ path('adminApproveArticleByCategory', {'category': category, 'id': article.id}) }}">Approve</a>
            <a class="btn btn-danger" href="{{ path('adminDeleteArticleByCategory', {'category': category, 'id': article.id}) }}" onClick="return confirm('Are you sure you want to delete this article (and the element) ?');"><i class="far fa-trash-alt"></i></a>
            {# <button id="deleteArticle" class="btn btn-danger" data-category="{{ category }}" data-articleId="{{ article.id }}"><i class="far fa-trash-alt"></i></button> #}
        </div>
    </section>
{% endblock %}